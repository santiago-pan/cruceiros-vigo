<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:id="@+id/cruise_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cruise_arrive"
                style="@style/CruiseItemTextViewStyle"
                android:layout_marginTop="5dip"/>

            <TextView
                android:id="@+id/cruise_name"
                style="@style/CruiseItemTextViewStyle"
                android:layout_below="@+id/cruise_arrive"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/cruise_length"
                style="@style/CruiseItemTextViewStyle"
                android:layout_below="@+id/cruise_name"/>

            <TextView
                android:id="@+id/cruise_arrive_time"
                style="@style/CruiseItemTextViewStyle"
                android:layout_below="@+id/cruise_length"/>

            <TextView
                android:id="@+id/cruise_departure_time"
                style="@style/CruiseItemTextViewStyle"
                android:layout_below="@+id/cruise_arrive_time"
                android:layout_marginBottom="5dip"/>

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="42dip"
                android:layout_height="42dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dip"
                android:src="@drawable/icon"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
